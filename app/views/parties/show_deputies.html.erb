<div class="page-header">
  <h1>
    <%= @party_name%> Deputies
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Party</th>
        <th>State</th>
        <th>Total spend (2011-2014)</th>
        <th>Actions</th>
      </tr>

      <tr>
        <% @deputies.where({:party => @party_name}).each do |y| %>
        <% id_deputy = y.id %>

        <td>
          <img src="<%= @deputies.find(id_deputy).picture %>" width="70">
        </td>
        <td>
          <%= @deputies.find(id_deputy).name %>
        </td>
        <td>
          <%= @deputies.find(id_deputy).party %>
        </td>
        <td>
          <%= @deputies.find(id_deputy).state %>
        </td>
        <td>
          <%= @deputies.find(id_deputy).expenses %>
        </td>
        <td>
          <a href="/deputies/<%= id_deputy %>" class="btn btn-primary">View expense detail</a>
          <a href="/deputies/<%= id_deputy %>/edit" class="btn btn-warning">Add to watchlist</a>
          <a href="/deputies/<%= id_deputy %>/edit" class="btn btn-warning">View contact details</a>
        </td>
      </tr>

      <% end  %>


    </table>
  </div>
</div>
