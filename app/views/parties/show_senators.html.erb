<div class="page-header">
  <h1>
    <%= @party_name%> Senators
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Party</th>
        <th>State</th>
        <th>Total spend (2011-2014)</th>
        <th>Actions</th>
      </tr>

      <tr>
        <% @senators.where({:party => @party_name}).each do |y| %>
        <% id_senator = y.id %>

        <td>
          <img src="<%= @senators.find(id_senator).picture %>" width="70">
        </td>
        <td>
          <%= @senators.find(id_senator).name %>
        </td>
        <td>
          <%= @senators.find(id_senator).party %>
        </td>
        <td>
          <%= @senators.find(id_senator).state %>
        </td>
        <td>
          <%= @senators.find(id_senator).expenses %>
        </td>
        <td>
          <a href="/senators/<%= id_senator %>" class="btn btn-primary">View expense detail</a>
          <a href="/senators/<%= id_senator %>/edit" class="btn btn-warning">Add to watchlist</a>
          <a href="/senators/<%= id_senator %>/edit" class="btn btn-warning">View contact details</a>
        </td>
      </tr>

      <% end  %>


    </table>
  </div>
</div>
