<div class="page-header">
  <h1>
    Deputies    
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>Party</th>
        <th>State</th>
        <th>Telephone</th>
        <th>Email</th>
        <th>Expenses ('11-'14)</th>
        <th>Actions</th>
      </tr>

      <% @deputies.each do |deputy| %>
      <tr>
        <td><%= deputy.picture %></td>
        <td><%= deputy.name %></td>
        <td><%= deputy.party %></td>
        <td><%= deputy.state %></td>
        <td><%= deputy.telephone %></td>
        <td><%= deputy.email %></td>
        <td><%= deputy.expenses %></td>

        <td>
          <a href="/deputies/<%= deputy.id %>" class="btn btn-primary">View expense detail</a>
          <a href="/deputies/<%= deputy.id %>/edit" class="btn btn-warning">Add to watchlist</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
