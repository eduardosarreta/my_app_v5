<div class="page-header">
  <h1>
    Senators (<%= @senators.count %>)
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Party</th>
        <th>State</th>
        <th>Expenses ('11-'14)</th>
        <th>Actions</th>
      </tr>

      <% @senators.each do |senator| %>
      <tr>
        <td><img src="<%=senator.picture%>" width="70"></td>
        <td><%= senator.name %></td>
        <td><%= senator.party %></td>
        <td><%= senator.state %></td>
        <td><%= senator.expenses %></td>

        <td>
          <a href="/senators/<%= senator.id %>" class="btn btn-primary">View expense detail</a>
          <a href="/senators/<%= senator.id %>/edit" class="btn btn-warning">Add to watchlist</a>
          <a href="/deputies/<%= senator.id %>/edit" class="btn btn-warning">View contact details</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
