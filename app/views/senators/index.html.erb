<div class="page-header">
  <h1>
    Senators
    <a href="/senators/new" class="btn btn-lg btn-success">New Senator</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Party</th>
        <th>Sex</th>
        <th>State</th>
        <th>Telephone</th>
        <th>Email</th>
        <th>Picture</th>
        <th>Expenses</th>
        <th>Actions</th>
      </tr>

      <% @senators.each do |senator| %>
      <tr>
        <td><%= senator.name %></td>
        <td><%= senator.party %></td>
        <td><%= senator.sex %></td>
        <td><%= senator.state %></td>
        <td><%= senator.telephone %></td>
        <td><%= senator.email %></td>
        <td><%= senator.picture %></td>
        <td><%= senator.expenses %></td>
        <td>
          <a href="/senators/<%= senator.id %>" class="btn btn-primary">Show</a>
          <a href="/senators/<%= senator.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_senator/<%= senator.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
